# EditorConfig for boost-conan-cmake
# Ensures consistent coding styles across different editors and IDEs
# Following C++ Core Guidelines formatting standards

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# C++ source files
[*.{cpp,cxx,cc,c++,hpp,hxx,h++,h}]
indent_size = 4
max_line_length = 100

# C files
[*.{c,h}]
indent_size = 4
max_line_length = 100

# CMake files
[{CMakeLists.txt,*.cmake}]
indent_size = 2
max_line_length = 120

# Conan files
[{conanfile.py,conanfile.txt,conandata.yml}]
indent_size = 4

# Python files (for scripts)
[*.py]
indent_size = 4
max_line_length = 88

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
max_line_length = 120

# YAML files
[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

# JSON files
[*.json]
indent_size = 2
max_line_length = 120

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 120

# Makefiles
[{Makefile,*.mk,*.mak}]
indent_style = tab
indent_size = 4

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_size = 2
max_line_length = 120

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_size = 4

# GitHub Actions workflows
[.github/workflows/*.yml]
indent_size = 2
max_line_length = 120
